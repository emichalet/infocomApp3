<h2>Sign up</h2>
<div class="form-vertical col-md-6 col-md-offset-3">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<%= f.input :nom %>
	<%= f.input :prenom %>
	<%= f.input :email, required: true, autofocus: true %>
	<%= f.input :date_de_naissance, as: :date, start_year: Date.today.year - 90,
	                          end_year: Date.today.year - 12%>
	<%= f.input :lieu_de_naissance %>
	<%= f.input :nationalité %>
	<%= f.input :numéro_de_téléphone %>
	<%= f.input :adresse %>
	<%= f.input :ville %>
	<%= f.input :statut_matrimonial %>
	<%= f.input :nombre_d_enfants %>
	<%= f.input :etudiant %>
	<%= f.input :dernier_diplôme %>
	<%= f.input :employé %>
	<%= f.input :statut_emploi %>
	<%= f.input :contrat_temps %>
	<%= f.input :salaire %>
	<%= f.input :pratique_un_sport %>
	<%= f.input :sport_pratiqué %>
	<%= f.input :heures_de_sport_par_semaine, input_html: { value: '0' }%>
	<%= f.input :niveau_sportif %>
	<%= f.input :orientation_sexuelle, input_html: { value: 'I like fishsticks' } %>
	<%= f.input :pratique_sexuelles %>
	<%= f.input :position_sexuelle_préférée %>
	<%= f.input :permis_de_conduire %>
	<%= f.input :donateur_de_sang %>
	<%= f.input :admin %>

	
	<%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
	<%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
